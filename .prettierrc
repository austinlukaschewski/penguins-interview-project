{
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 120,
    "jsxSingleQuote": true,
    "plugins": ["prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": ["package.json", "nx.json", "tsconfig.base.json", ".vscode/**/*.json"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["**/*.yaml", "**/*.yml"],
            "options": {
                "singleQuote": false,
                "tabWidth": 4
            }
        },
        {
            "files": ["**/*.scss"],
            "options": {
                "trailingComma": "none",
                "tabWidth": 4
            }
        }
    ]
}
