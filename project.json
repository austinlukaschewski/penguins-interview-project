{
    "name": "penguins-interview-project",
    "$schema": "node_modules/nx/schemas/project-schema.json",
    "includedScripts": [],
    "projectType": "application",
    "prefix": "app",
    "sourceRoot": "./src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@angular/build:application",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/penguins-interview-project",
                "browser": "./src/main.ts",
                "polyfills": ["zone.js"],
                "tsConfig": "tsconfig.app.json",
                "inlineStyleLanguage": "scss",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "public"
                    }
                ],
                "styles": ["./src/styles/global.scss"]
                // "server": "src/main.server.ts",
                // "ssr": {
                //     "entry": "src/server.ts"
                // },
                // "outputMode": "server"
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "4kb",
                            "maximumError": "8kb"
                        }
                    ],
                    "outputHashing": "all"
                },
                "development": {
                    "optimization": false,
                    "extractLicenses": false,
                    "sourceMap": true
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "continuous": true,
            "executor": "@angular/build:dev-server",
            "configurations": {
                "production": {
                    "buildTarget": "penguins-interview-project:build:production"
                },
                "development": {
                    "buildTarget": "penguins-interview-project:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "extract-i18n": {
            "executor": "@angular/build:extract-i18n",
            "options": {
                "buildTarget": "penguins-interview-project:build"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": ["./src"]
            }
        },
        "serve-static": {
            "continuous": true,
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "penguins-interview-project:build",
                "staticFilePath": "dist/penguins-interview-project/browser",
                "spa": true
            }
        }
    }
}
